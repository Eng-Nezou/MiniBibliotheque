<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniLibraryApp.RegisterPage"
             Title="Register">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Créer un compte" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Entry x:Name="emailEntry" Placeholder="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Mot de passe" IsPassword="True"/>
        <Entry x:Name="confirmEntry" Placeholder="Confirmer mot de passe" IsPassword="True"/>
        <Button Text="Créer un compte" Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>
</ContentPage>
