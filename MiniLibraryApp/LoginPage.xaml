<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniLibraryApp.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Se connecter" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Entry x:Name="emailEntry" Placeholder="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Mot de passe" IsPassword="True"/>
        <Button Text="Se connecter" Clicked="OnLoginClicked"/>
        <HorizontalStackLayout Padding="0" HorizontalOptions="Center">
            <Label Text="Pas de compte? " />
            <Label Text="S'inscrire" TextColor="Blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                </Label.GestureRecognizers>
            </Label>

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
