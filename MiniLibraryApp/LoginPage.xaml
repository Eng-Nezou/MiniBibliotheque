<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniLibraryApp.LoginPage"
             Title=""
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            
            <Image Source="https://img.freepik.com/vecteurs-premium/logo-bibliotheque_1029707-2.jpg"
                   HeightRequest="120"
                   WidthRequest="120"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   Margin="0,0,0,28"/>

            <Label Text="Se connecter" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="passwordEntry" Placeholder="Mot de passe" IsPassword="True"/>

            <Button Text="Se connecter" 
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="OnLoginClicked"/>

            <HorizontalStackLayout Padding="0" HorizontalOptions="Center">
                <Label Text="Pas de compte? " />
                <Label Text="S'inscrire" TextColor="Blue">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
